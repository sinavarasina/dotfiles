# MPD
mpd_host = "0.0.0.0"
mpd_port = "6600"
mpd_crossfade_time = "2"

# VISUALIZER
visualizer_data_source = "/tmp/mpd.fifo"
visualizer_output_name = "Visualizer"
visualizer_in_stereo = "yes"
visualizer_fps = "180"
visualizer_type = "wave"
visualizer_look = "▋▋"
#visualizer_color = "198, 145, 37, 235, 159"
visualizer_color = "100, 250, 200, 150, 250"
visualizer_spectrum_smooth_look = "yes"

# GENERAL
lyrics_directory = "~/.config/ncmpcpp/lyrics"
connected_message_on_startup = "yes"
cyclic_scrolling = "yes"
mouse_support = "yes"
mouse_list_scroll_whole_page = "yes"
lines_scrolled = "1"
message_delay_time = "1"
playlist_shorten_total_times = "yes"
playlist_display_mode = "columns"
browser_display_mode = "columns"
search_engine_display_mode = "columns"
playlist_editor_display_mode = "columns"
autocenter_mode = "yes"
centered_cursor = "yes"
user_interface = "alternative"
follow_now_playing_lyrics = "yes"
locked_screen_width_part = "50"
display_bitrate = "yes"
startup_screen = "playlist"

# PROGRESS BAR
progressbar_look = "━━─"
progressbar_elapsed_color = "159"  # Light Cyan (#86cecb)
progressbar_color = "235"  # Dark Gray (#373b3e)

# UI VISIBILITY
header_visibility = "yes"
statusbar_visibility = "yes"
titles_visibility = "yes"
enable_window_title = "yes"

# COLORS (Hatsune Miku Inspired)
colors_enabled = "yes"
empty_tag_color = "145"  # Light Gray (#bec8d1)
header_window_color = "159"  # Light Cyan (#86cecb)
volume_color = "159"  # Light Cyan (#86cecb)
state_line_color = "159"  # Light Cyan (#86cecb)
state_flags_color = "159"  # Light Cyan (#86cecb)
main_window_color = "145"  # Light Gray (#bec8d1)
color1 = "235"  # Dark Gray (#373b3e)
color2 = "37"  # Teal (#137a7f)
statusbar_color = "145"  # Light Gray (#bec8d1)
player_state_color = "198"  # Pink (#e12885)

# UI APPEARANCE
now_playing_prefix = "$b"
now_playing_suffix = "$/b 󰎈"
#current_item_prefix = "⇒ $b$5"
#current_item_suffix = "$/b$9"

# SONG FORMATS
song_columns_list_format = "(20)[145]{a} (35)[159]{t|f:Title} (30)[37]{b} (4)[198]{l}" 
song_list_format = "{$5%a $9}{$7%t$9}{$6%b $9}{$3(%l)$9}"
song_status_format = "$b$7{$8 %t $9} $8by {$6%a$9} $8on {$6%b$9} $8({$6%y$9})$/b"
song_window_title_format = " {%a - }{%t}"
song_library_format = "{%n - }{%t}"

# PLAYLIST APPEARANCE
playlist_show_remaining_time = "yes"
playlist_show_mpd_host = "yes"

# MISC SETTINGS
screen_switcher_mode = "playlist, browser, search_engine, media_library, playlist_editor"
#startup_slave_screen = "visualizer"
#startup_slave_screen_focus = "yes"

# HIGHLIGHT COLORS
active_window_border = "37"  # Teal (#137a7f)
window_border_color = "159"  # Light Cyan (#86cecb)
alternative_ui_separator_color = "159"  # Light Cyan (#86cecb)

# SONG SELECTION HIGHLIGHT
current_item_inactive_column_prefix = "$3"
current_item_inactive_column_suffix = "$9"
modified_item_prefix = "$3> $9"
#selected_item_prefix = "$b198"  # Pink (#e12885)
#selected_item_suffix = "$/b$9"

# ADDITIONAL SETTINGS
external_editor = "nvim"
use_console_editor = "yes"
clock_display_seconds = "yes"
display_volume_level = "yes"
display_remaining_time = "yes"
